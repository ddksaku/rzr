<UserControl x:Class="Rzr.Core.Editors.CardEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Rzr.Core.Controls">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:CardControl Grid.Row="0" Grid.Column="0" x:Name="CardImage"/>
        <Button Grid.Row="0" Grid.Column="0" Focusable="False" x:Name="CardButton" Click="OnCardClicked" Background="Transparent" BorderBrush="Transparent" />

    </Grid>
</UserControl>
