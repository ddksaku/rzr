<UserControl x:Class="Rzr.Core.Tree.TreeGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tree="clr-namespace:Rzr.Core.Tree"
             Height="0">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <tree:BetTreeNode x:Name="NodeDisplay" Grid.Row="0" Grid.Column="0" Width="240"/>
        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" x:Name="Children" />
    </Grid>
</UserControl>
