<UserControl x:Class="Rzr.Core.Tree.BetTreeNodeResultsDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54"/>
            <ColumnDefinition Width="18"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Padding="4,2,0,0" Text="{Binding Path=HeroName}" VerticalAlignment="Center" 
                   Height="20" Foreground="Red"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Padding="0,2,0,0" Text="EV:" VerticalAlignment="Center" Foreground="Red" 
                   Height="20" />
        <TextBlock Grid.Row="0" Grid.Column="2" Padding="0,2,0,0" Text="{Binding Path=ExpectedValue}" VerticalAlignment="Center" 
                   Height="20" Foreground="Red"/>        
    </Grid>
</UserControl>
